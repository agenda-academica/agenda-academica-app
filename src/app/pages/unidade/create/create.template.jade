toolbar.default-color(
  title='Unidades',
  left-icon='menu',
  on-click-method='toggleLeftSidenav'
  right-button-enable='true'
  right-button-text='Salvar'
  right-button-type='text'
  right-button-
)

md-content.page-create-unidade(layout-padding)
  h2 Cadastro
  form(name='createUnidade' layout-padding ng-submit='$ctrl.submit()')
    div(layout-gt-sm='row')

      md-input-container.md-block(flex-gt-sm)
        label Universidade
        md-select(
          ng-model='$ctrl.currentUniversidade'
          ng-disabled='$ctrl.hasUniversidadeId'
          required
        )
          md-option(
            ng-repeat='(index, universidade) in $ctrl.universidades'
            ng-value='universidade'
            ng-selected='index === $ctrl.currentIndex'
          )
            | {{universidade.nome}}
        .md-errors-spacer

      md-input-container.md-block(flex-gt-sm)
        label Nome da unidade
        input(
          md-minlength='5'
          required=''
          name='nome'
          ng-model='$ctrl.unidadeForm.nome'
        )
        div(ng-messages='createUnidade.nome.$error')
          div(ng-message='required')
            | This is required.
          div(ng-message='md-maxlength')
            | The name has to be less than 30 characters long.

      md-input-container.md-block(flex-gt-sm)
        label Endereço completo
        input(
          required
          name='endereco'
          ng-model='$ctrl.unidadeForm.endereco'
        )
        div(ng-messages='createUnidade.endereco.$error')
          div(ng-message='required') This is required.

      md-input-container.md-block(flex-gt-sm)
        label Outras informações
        input(
          name='outrasInformacoes'
          ng-model='$ctrl.unidadeForm.outrasInformacoes'
        )

      md-input-container.md-block(flex-gt-sm)
        md-checkbox.md-primary(
          aria-label='Unidade sede'
          ng-model='$ctrl.unidadeForm.unidadeSede'
        )
          | Unidade sede

      md-input-container.md-block
        md-button.md-raised.submit-btn(
          type='submit'
          layout='row'
          layout-align='center center'
        ) Próximo
          ng-md-icon(
            layout='row'
            layout-align='center center'
            md-menu-origin='',
            icon='keyboard_arrow_right',
            style='fill: #fff',
            aria-label='Próximo'
          )
