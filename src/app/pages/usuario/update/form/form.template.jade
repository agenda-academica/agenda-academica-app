form(name='update' layout-padding ng-submit='$ctrl.parent.submit()')
  div(layout-gt-sm='row')
    md-input-container.md-block(flex-gt-sm)
      label Nome
      input(md-minlength='5', required='', name='nome', ng-model='$ctrl.parent.nome', autofocus)
      div(ng-messages='update.nome.$error')
        div(ng-message='required') This is required.
        div(ng-message='md-maxlength') The name has to be less than 30 characters long.

    md-input-container.md-block(flex-gt-sm)
      label Celular
      input(required='', name='celular', ng-model='$ctrl.parent.celular', mask='(99) 9?9999-9999')
      div(ng-messages='update.celular.$error')
        div(ng-message='required') This is required.

    md-input-container.md-block(flex-gt-sm)
      label Email
      input(required='', name='email', ng-model='$ctrl.parent.email', type='email')
      div(ng-messages='update.email.$error', ng-show='update.email.$touched')
        div(ng-message='required') This is required.
        div(ng-message='email') Formato de email inv√°lido.

    md-input-container.md-block(flex-gt-sm)
      label Login
      input(required='', name='login', ng-model='$ctrl.parent.login')
      div(ng-messages='update.login.$error')
        div(ng-message='required') This is required.

    md-input-container.md-block(flex-gt-sm)
      label Senha
      input(required='', name='senha', ng-model='$ctrl.parent.senha', type='password')
      div(ng-messages='update.senha.$error')
        div(ng-message='required') This is required.

    md-input-container.md-block(flex-gt-sm)
      label Confirmar senha
      input(
        required=''
        name='confirmarSenha'
        ng-model='$ctrl.parent.confirmarSenha'
        type='password'
        validate-password-confirmation="{{$ctrl.parent.senha}}"
      )
      div(ng-messages='update.confirmarSenha.$error', ng-show='update.confirmarSenha.$touched')
        div(ng-message='required') This is required.
        div(ng-message='validatePasswordConfirmation') Uppercase.

    md-input-container.md-block(flex-gt-sm)
      md-button.md-raised.md-primary.btn-row(
        type='submit'
      ) Salvar

    md-input-container.md-block(flex-gt-sm)
      md-button.md-raised.delete-btn.btn-row(ng-click='$ctrl.parent.delete()') Excluir
