toolbar.default-color(
  title='Universidades'
  left-icon='menu'
  on-click-method='toggleLeftSidenav'
  right-button-enable='true'
  right-button-type='text'
  right-button-text='Salvar'
  right-button-on-click-method='$ctrl.submitGoBack()'
)

md-content.page-create-universidade(layout-padding)
  h2 Cadastro
  form(name='createUniversidade' layout-padding ng-submit='$ctrl.submit()')
    div(layout-gt-sm='row')
      md-input-container.md-block(flex-gt-sm)
        label Apelido/Abreviação
        input(
          md-minlength='5'
          required=''
          name='abreviacao'
          ng-model='$ctrl.universidadeForm.abreviacao'
        )
        div(ng-messages='createUniversidade.abreviacao.$error')
          div(ng-message='required')
            | This is required.
          div(ng-message='md-maxlength')
            | The name has to be less than 30 characters long.

      md-input-container.md-block(flex-gt-sm)
        label Nome da universidades
        input(required='', name='nome', ng-model='$ctrl.universidadeForm.nome')
        div(ng-messages='createUniversidade.nome.$error')
          div(ng-message='required') This is required.

      md-input-container.md-block(flex-gt-sm)
        label Site
        input(name='site', ng-model='$ctrl.universidadeForm.site')

      md-input-container.md-block(flex-gt-sm)
        label Logo
        input(name='logo', ng-model='$ctrl.universidadeForm.logo')

      md-input-container.md-block
        md-button.md-raised.submit-btn(
          type='submit'
          layout='row'
          layout-align='center center'
        ) Próximo
          ng-md-icon(
            layout='row'
            layout-align='center center'
            md-menu-origin='',
            icon='keyboard_arrow_right',
            style='fill: #fff',
            aria-label='Próximo'
          )
