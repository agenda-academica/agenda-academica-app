h2 Consulta
.empty-message(ng-hide='$ctrl.parent.universidades.length')
  ng-md-icon(class='md-avatar' size='50%' icon='account_balance' style='fill: #ccc')
  div Nenhuma universidade cadastrada.

md-card(ng-repeat='universidade in $ctrl.parent.universidades')
  md-card-title
    md-card-title-media
      .md-media-lg.card-media(ng-show='$ctrl.showFirstLetterLogo(universidade)')
        | {{universidade.abreviacao | limitTo: 1: 0}}
      img(
        ng-src='{{$ctrl.getLogoImage(universidade)}}'
        ng-show='$ctrl.showLogo(universidade)'
      )
    md-card-title-text
      span.md-headline {{universidade.abreviacao}}
      span.md-subhead {{universidade.nome}}
      .actions(layout='row')
        md-button(
          ng-href='{{"/#/universidade/update/" + universidade.codigo}}'
          aria-label='{{"Alterar " + universidade.nome}}'
        ) detalhes
