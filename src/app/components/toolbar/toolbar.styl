md-toolbar
  position fixed
  top 0
  left 0
  box-shadow 0 0 10px rgba(0,0,0,.5)

  .md-toolbar-tools
    > .title.hand
      cursor pointer

md-sidenav
  position fixed
  top 0
  left 0

md-backdrop
  position fixed
  top 0
  left 0

md-list
  md-list-item
    & > a
      margin 0

md-list-item
  .md-avatar, .md-list-item-inner .md-avatar
    width 30px
    height 30px
    fill #606060
