//- Toolbar
md-toolbar
  .md-toolbar-tools(layout='row' layout-align='space-between center')
    div(layout='row' layout-align='start center')
      md-button.md-icon-button(
        aria-label='{{$ctrl.title}}'
        ng-click='$ctrl.onClickCallback()'
      )
        ng-md-icon(icon='{{$ctrl.leftIcon}}' style='fill: #fff')

      h2.title.hand(ng-click='$ctrl.onClickCallback()')
        span {{$ctrl.title}}

    //- More Menu
    md-menu(
      md-position-mode='target-right target'
      ng-show='$ctrl.rightMenu == "true"'
    )
      md-button.md-icon-button(aria-label='More')
        ng-md-icon(
          md-menu-origin='',
          icon='more_vert',
          style='fill: #fff',
          ng-click='$mdOpenMenu($event)',
          aria-label='Open demo menu'
        )
      md-menu-content(width='4')
        md-menu-item
          md-button(ng-click='$ctrl.logout()')
            div(layout='row')
              p(flex='') Logout
              ng-md-icon(
                md-menu-align-target='',
                icon='logout',
                style='margin: auto 3px auto 0;'
              )

    md-button.right-button(
      aria-label='Salvar'
      ng-show='$ctrl.rightButtonEnable == "true"'
      ng-class='$ctrl.rightButtonClasses'
      ng-click='$ctrl.rightButtonOnClickMethod()'
    )
      span(ng-show='$ctrl.rightButtonType === "text"')
        | {{$ctrl.rightButtonText}}
      ng-md-icon(
        ng-show='$ctrl.rightButtonType === "icon"'
        icon='{{$ctrl.rightButtonIcon}}'
        style='{{$ctrl.rightButtonIconStyle}}'
      )

//- Sidenav
md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id='left')
