    .toolbar-background(
      style='{{"background-image: url(\'" + $ctrl.user.image + "\');"}}'
    )
    md-button.settings.md-icon-button(
      ng-href='/#/user/edit'
      aria-label='Configurações'
    )
      ng-md-icon(size='30' icon='settings')
    img.avatar(ng-src='{{$ctrl.user.image}}')
