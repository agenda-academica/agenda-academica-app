//- Toolbar
md-toolbar
  .md-toolbar-tools
    md-button.md-icon-button(aria-label='Settings' ng-click='$ctrl.onClickCallback()')
      ng-md-icon(icon='{{$ctrl.leftIcon}}' style='fill: #fff')
    h2.title.hand(ng-click='$ctrl.onClickCallback()')
      span {{$ctrl.title}}

    //- More Menu
    md-menu(md-position-mode='target-right target' ng-show='$ctrl.rightMenu == "true"')
      md-button.md-icon-button(aria-label='More')
        ng-md-icon(
          md-menu-origin='',
          icon='more_vert',
          style='fill: #fff',
          ng-click='$mdOpenMenu($event)',
          aria-label='Open demo menu'
        )
      md-menu-content(width='4')
        md-menu-item
          md-button(ng-click='$ctrl.announceClick("Logout")')
            div(layout='row')
              p(flex='') Logout
              ng-md-icon(
                md-menu-align-target='',
                icon='logout',
                style='margin: auto 3px auto 0;'
              )

